<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 5.3//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-5.3.dtd">

<hibernate-mapping>
    <class name="com.myjava.java.hibernate.entities.Pen" table="pens">
        <id name="id">
            <generator class="identity"></generator>
        </id>
        
        <property name="label" column="label"></property>
        <property name="materialName" column="material_name"></property>
        <property name="weight" column="weight"></property>
        <property name="length" column="length"></property>
    </class>
</hibernate-mapping>